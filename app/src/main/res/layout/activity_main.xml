<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/resultado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:gravity="end"
        android:text=""
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <Button
        android:id="@+id/limpar"
        style="@style/Operators_Button"
        android:layout_width="184dp"
        android:layout_height="90dp"
        android:text="@string/limpar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        />

    <Button
        android:id="@+id/divisao"
        style="@style/Operators_Button"
        android:layout_width="184dp"
        android:layout_height="90dp"
        android:text="@string/divisao"
        app:layout_constraintLeft_toRightOf="@id/limpar"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        />

    <Button
        android:id="@+id/numero_sete"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_sete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/limpar" />

    <Button
        android:id="@+id/numero_oito"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_oito"
        app:layout_constraintLeft_toRightOf="@id/numero_sete"
        app:layout_constraintTop_toTopOf="@+id/numero_sete"
        />

    <Button
        android:id="@+id/numero_nove"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_nove"
        app:layout_constraintTop_toTopOf="@+id/numero_oito"
        app:layout_constraintStart_toEndOf="@id/numero_oito"/>


    <Button
        android:id="@+id/multiplicacao"
        style="@style/Operators_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/multiplicacao"
        app:layout_constraintStart_toEndOf="@id/numero_nove"
        app:layout_constraintTop_toTopOf="@id/numero_nove"
        />

    <Button
        android:id="@+id/numero_quatro"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_quatro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numero_sete" />

    <Button
        android:id="@+id/numero_cinco"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_cinco"
        app:layout_constraintLeft_toRightOf="@id/numero_quatro"
        app:layout_constraintTop_toTopOf="@id/numero_quatro"
        />

    <Button
        android:id="@+id/numero_seis"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_seis"
        app:layout_constraintTop_toTopOf="@id/numero_cinco"
        app:layout_constraintStart_toEndOf="@id/numero_cinco"
        />

    <Button
        android:id="@+id/subtracao"
        style="@style/Operators_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/subtracao"
        app:layout_constraintStart_toEndOf="@id/numero_seis"
        app:layout_constraintTop_toTopOf="@id/numero_seis"
        />

    <Button
        android:id="@+id/numero_um"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_um"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numero_quatro"
        />

    <Button
        android:id="@+id/numero_dois"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_dois"
        app:layout_constraintLeft_toRightOf="@id/numero_um"
        app:layout_constraintTop_toTopOf="@id/numero_um"
        />

    <Button
        android:id="@+id/numero_tres"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_tres"
        app:layout_constraintTop_toTopOf="@id/numero_dois"
        app:layout_constraintStart_toEndOf="@id/numero_dois"
        />

    <Button
        android:id="@+id/adicao"
        style="@style/Operators_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/adicao"
        app:layout_constraintStart_toEndOf="@id/numero_tres"
        app:layout_constraintTop_toTopOf="@id/numero_tres"
        />

    <Button
        android:id="@+id/ponto"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/ponto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numero_um"
        />

    <Button
        android:id="@+id/numero_zero"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/numero_zero"
        app:layout_constraintLeft_toRightOf="@id/ponto"
        app:layout_constraintTop_toTopOf="@id/ponto" />

    <Button
        android:id="@+id/backspace"
        style="@style/Numbers_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/back"
        app:layout_constraintTop_toTopOf="@id/numero_zero"
        app:layout_constraintStart_toEndOf="@id/numero_zero"
        />

    <Button
        android:id="@+id/igual"
        style="@style/Operators_Button"
        android:layout_width="92dp"
        android:layout_height="110dp"
        android:text="@string/igual"
        app:layout_constraintStart_toEndOf="@id/backspace"
        app:layout_constraintTop_toTopOf="@id/backspace"
        />
</androidx.constraintlayout.widget.ConstraintLayout>